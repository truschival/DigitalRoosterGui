# Great idea taken from http://crascit.com/2015/07/25/cmake-gtest/

cmake_minimum_required(VERSION 3.10)

if(POLICY CMP0048)
  cmake_policy(PUSH)
  cmake_policy(SET CMP0048 NEW)
endif()


PROJECT(Pistache
  VERSION 1.0.0
  LANGUAGES NONE)

include(ExternalProject)

ExternalProject_Add(GTestExternal
  GIT_REPOSITORY    https://github.com/oktal/pistache.git
  GIT_TAG           0b6cb29915e2b0fa915f53051efc5583b5ef74e6
  TIMEOUT 10
  SOURCE_DIR        "${PISTACHE_PREFIX}/pistache-src"
  BINARY_DIR        "${PISTACHE_PREFIX}/build"
  CONFIGURE_COMMAND ""
  BUILD_COMMAND     ""
  INSTALL_COMMAND   ""
  TEST_COMMAND      ""
)

if(POLICY CMP0048)
  cmake_policy(POP)
endif()
